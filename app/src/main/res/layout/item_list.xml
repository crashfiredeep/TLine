<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/card_corner_radius"
    card_view:cardElevation="@dimen/card_corner_radius"
    card_view:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_padding_minimal"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView_dp"
            android:layout_width="@dimen/width_height_dp"
            android:layout_height="@dimen/width_height_dp"
            android:background="@drawable/bg_row"
            android:contentDescription="@string/empty"
            android:padding="@dimen/margin_padding_minimal"
            android:scaleType="fitCenter" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_padding_minimal"
            android:layout_weight="1"
            android:orientation="vertical">

            <include layout="@layout/view_tweet_header" />

            <include layout="@layout/view_tweet_content" />

            <include layout="@layout/view_tweet_footer" />

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>

